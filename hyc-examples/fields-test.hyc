import "./test-math.hyc";

struct City {
    name: str;
    postal_code: int[16];
}

struct Address {
    street_no: int[32];
    house_no: int[32];
    city: City;
}

struct Person {
    name: str;
    age: int[32];
    address: Address;
}

fn address_of -> Address (p: Person) {
    return p.address;
}

fn postal_code_of -> int[32] (p: Person) {
    return p.address.city.postal_code;
}

fn main -> void () {
    let p: Person = Person {
        name: "John",
        age: 21,
        address: Address {
            street_no: 1,
            house_no: 5,
            city: City {
                name: "Cityville",
                postal_code: 8231,
            },
        },
    };

    let house_no: int[32] = p.address.house_no;
    let postal_code: uint[32] = p.address.city.postal_code;
    let city_name: str = p.address.city.name;

    let ha: str = "Ha";
    let mult_ha: str = 10 * ha;
}
